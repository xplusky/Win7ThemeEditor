<Page
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="ThemeInstaller.Pages.ReadmeSence"
	x:Name="Page"
	WindowTitle="Page"
	FlowDirection="LeftToRight" Width="664" Height="417" Loaded="Page_Loaded">

	<Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="TextboxReadme" Margin="15,10" TextWrapping="Wrap" Template="{DynamicResource TextBoxControlTemplate1}" FontSize="16" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
        <Button x:Name="BtnNext" Content="{DynamicResource BtnNext}" Height="40" VerticalAlignment="Center" Click="BtnStartInstall_Click" Template="{DynamicResource ButtonControlTemp2}" HorizontalAlignment="Center" Width="150" Grid.Row="1" Margin="200,0,0,0" />
		<Button x:Name="BtnBack" Content="{DynamicResource BtnBack}" HorizontalAlignment="Center" Height="40" VerticalAlignment="Center" Width="150" Click="BtnBack_Click" Template="{DynamicResource ButtonControlTemp2}" Grid.Row="1" Margin="-200,0,0,0" />
	</Grid>
</Page>